<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.kinjeng.apmpilot.activities.MainActivity">

    <org.kinjeng.apmpilot.views.HUDView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/surfaceView"
        android:layout_weight="1" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="3"
            android:layout_gravity="fill_horizontal"
            android:padding="@dimen/activity_default_padding">

            <TextView
                android:text="Vehicle Mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_vehicle_mode"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:gravity="left" />

            <TextView
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_general_info"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/white" />

            <TextView
                android:text="Disarmed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_state_arm"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:gravity="right" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"
            android:gravity="bottom|left"
            android:padding="@dimen/activity_default_padding">


            <TextView
                android:text="Alt:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_altitude"
                android:gravity="top"
                android:textColor="@android:color/white" />

            <TextView
                android:text="Speed:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_speed"
                android:gravity="top"
                android:textColor="@android:color/white" />

            <TextView
                android:text="Bat_Vol:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_battery_vol"
                android:gravity="bottom"
                android:layout_weight="1"
                android:textColor="@android:color/white" />

            <TextView
                android:text="Bat Cur:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_battery_cur"
                android:gravity="bottom"
                android:textColor="@android:color/white" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_settings_32"
                android:id="@+id/button_preference"
                android:minHeight="64dp"
                android:minWidth="64dp"
                android:layout_marginTop="@dimen/activity_default_padding"
                android:focusable="false" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical|fill_horizontal"
            android:gravity="bottom">

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom|right"
            android:padding="@dimen/activity_default_padding"
            android:layout_gravity="fill_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_xxxxx"
                android:textColor="@android:color/white"
                android:layout_weight="1"
                android:text="xxxxx" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_wifi_32"
                android:id="@+id/button_connect"
                android:minWidth="64dp"
                android:minHeight="64dp"
                android:layout_marginTop="@dimen/activity_default_padding"
                android:focusable="false" />
        </LinearLayout>

    </GridLayout>

</FrameLayout>
